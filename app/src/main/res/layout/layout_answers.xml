<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/cb_answer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:checked="true"
        android:theme="@style/MyCheckBox" />

    <EditText
        android:id="@+id/et_answer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="4dp"
        android:text=""
        android:hint="An answer goes here"
        android:textColor="@color/colorDeepGray"
        android:textSize="@dimen/dimenAddSetTextSize" />

    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_clear_black_24px"
        android:clickable="true"
        android:background="@color/colorWhite"
        android:layout_gravity="center_vertical"
        android:tint="@color/colorLightGray"/>
</LinearLayout>