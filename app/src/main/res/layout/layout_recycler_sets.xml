<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_text_format_black_24px"
            android:tint="@color/colorLightGray"
            android:layout_marginRight="8dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컴퓨터의 이해 1강"
                    android:paddingBottom="4dp"
                    android:background="@color/colorWhite"
                    android:textSize="16dp"
                    android:textColor="@color/colorBlack"

                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:tint="@color/colorPperfect"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="top"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-03-20 04. 54. 33"
                android:textSize="12dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <ToggleButton
                android:id="@+id/tg_favor"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginBottom="4dp"
                android:background="@drawable/sel_toggle_favor"
                android:textOff=""
                android:checked="false"
                android:textOn=""
                />
            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="100%"

                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#21a42e"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_more_vert_black_24px"
            android:tint="@color/colorGray"
            />



    </LinearLayout>

</android.support.v7.widget.CardView>